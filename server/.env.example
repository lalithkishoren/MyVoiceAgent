# Sutherland Voice Agent Server Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Required API Keys
# =============================================================================

# Google Gemini API key for Gemini Live (STT + LLM + TTS)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Server Configuration
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8080

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# Session Management
# =============================================================================

# Maximum number of concurrent voice sessions
MAX_SESSIONS=50

# Session timeout in seconds (default: 1800 = 30 minutes)
SESSION_TIMEOUT=1800

# Session cleanup interval in seconds (default: 300 = 5 minutes)
CLEANUP_INTERVAL=300

# =============================================================================
# AI Service Configuration (Optional)
# =============================================================================

# Gemini Live model configuration
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_LANGUAGE=en-US

# =============================================================================
# WebRTC Configuration (Optional)
# =============================================================================

# STUN servers for WebRTC (comma-separated)
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# =============================================================================
# Production Configuration (Optional)
# =============================================================================

# Enable/disable development features
DEBUG=false

# CORS allowed origins (comma-separated, * for all)
CORS_ORIGINS=*

# Enable metrics collection
ENABLE_METRICS=true

# Prometheus metrics port (if different from main port)
METRICS_PORT=9090

# =============================================================================
# Security Configuration (Optional)
# =============================================================================

# API key for server endpoints (if authentication required)
# SERVER_API_KEY=your_server_api_key_here

# JWT secret for session tokens (if using JWT)
# JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Database Configuration (Optional - for future extensions)
# =============================================================================

# Database URL for session persistence (if enabled)
# DATABASE_URL=postgresql://user:password@localhost/pipecat_voice

# Redis URL for session caching (if enabled)
# REDIS_URL=redis://localhost:6379/0